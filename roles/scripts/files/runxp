#!/usr/bin/env bash
set -euo pipefail

source /usr/local/sbin/library.bash

case "${ROLE}" in
  "nightking")
    nohup /usr/local/sbin/nightking.bash "$@" &
    ;;
  "whitewalker")
    nohup /usr/local/sbin/whitewalker.bash "$@" &
    ;;
  "stark")
    nohup /usr/local/sbin/stark.bash "$@" &
    ;;
  *)
    echo "Cannot understand ROLE=${ROLE}" > "${LOG_DIR}/startup-error"
    ;;
esac
